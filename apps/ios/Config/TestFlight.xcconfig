// TestFlight.xcconfig
// Configuration for TestFlight beta testing environment

// MARK: - Base Settings
IPHONEOS_DEPLOYMENT_TARGET = 17.0
SWIFT_VERSION = 5.0
TARGETED_DEVICE_FAMILY = 1,2
ENABLE_BITCODE = NO
DEVELOPMENT_TEAM = 6H6N882H4S
CODE_SIGN_STYLE = Automatic
PRODUCT_NAME = TrendSight
MARKETING_VERSION = 1.0
CURRENT_PROJECT_VERSION = 1
INFOPLIST_FILE = trendy/trendy-Info.plist

// MARK: - Bundle Identifier
// Uses production bundle ID as required by App Store Connect
PRODUCT_BUNDLE_IDENTIFIER = com.shadowlabs.trendsight

// MARK: - Display Name
// Shows "TrendSight Beta" in app name to distinguish from production
PRODUCT_DISPLAY_NAME = TrendSight Beta

// MARK: - Environment Settings
// Secrets loaded from Secrets-TestFlight.xcconfig (gitignored)
#include "Secrets-TestFlight.xcconfig"

// MARK: - Build Settings
// Optimize like production but keep testability for beta testing
DEBUG_INFORMATION_FORMAT = dwarf-with-dsym
GCC_OPTIMIZATION_LEVEL = s
SWIFT_ACTIVE_COMPILATION_CONDITIONS = TESTFLIGHT
SWIFT_COMPILATION_MODE = wholemodule
SWIFT_OPTIMIZATION_LEVEL = -O
OTHER_SWIFT_FLAGS = -D TESTFLIGHT

// Keep testability for beta testing
ENABLE_TESTABILITY = YES

// MARK: - TestFlight Settings
// Allow beta testers to see this is a beta build
// (You can check for TESTFLIGHT flag in code to show beta badge/indicators)
